<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.login.CreateUserAccount">

    <LinearLayout
        android:id="@+id/linear_layout_create_account_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_id"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/edit_text_employee_id"
            android:id="@+id/user_id_text" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_employee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin"
            app:hintTextAppearance="@style/HintText">

            <EditText
                android:id="@+id/edit_text_employee_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_employee_id"
                android:nextFocusDown="@+id/employee_name_text"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login_buttons_text_size" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_name"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/edit_text_employeename_create"
            android:id="@+id/employee_name_text" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_employeename_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin"
            app:hintTextAppearance="@style/HintText">

            <EditText
                android:id="@+id/edit_text_employeename_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_employeename"
                android:inputType="textCapWords"
                android:padding="@dimen/edit_text_padding"
                android:nextFocusDown="@+id/employee_email_text"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login_buttons_text_size" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_email"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/edit_text_email_create"
            android:id="@+id/employee_email_text" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin">

            <EditText
                android:id="@+id/edit_text_email_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/edit_text_padding"
                android:nextFocusDown="@+id/employee_gender_text"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login_buttons_text_size" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_gender"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/spinner_employee_gender"
            android:id="@+id/employee_gender_text" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_gender_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin">

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_employee_gender"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_email"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:nextFocusDown="@+id/employee_institute_text"
                android:textSize="@dimen/login_buttons_text_size" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_institute"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/spinner_employee_institute"
            android:id="@+id/employee_institute_text" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_employee_institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_employee_institute"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_email"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:nextFocusDown="@+id/employee_department_text"
                android:textSize="@dimen/login_buttons_text_size" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_employee_department"
            android:textColor="@color/primary"
            android:nextFocusDown="@+id/spinner_employee_department"
            android:id="@+id/employee_department_text" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_employee_depratment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginBottom="@dimen/lists_title_bottom_margin">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_employee_department"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_email"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login_buttons_text_size" />

        </android.support.design.widget.TextInputLayout>
   <!-- </LinearLayout>-->

        <Button
            android:id="@+id/btn_create_account_final"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_field_height"
            android:background="@color/primary"
            android:onClick="onCreateAccountPressed"
            android:text="@string/title_activity_create_account"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_buttons_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_already_have_account"
                style="@style/LoginCreateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="@string/text_already_have_account" />

            <TextView
                android:id="@+id/tv_sign_in"
                style="@style/LoginCreateTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="GoToLoginActivity"
                android:text="@string/button_sign_in"
                android:textColor="@color/primary"
                android:nextFocusDown="@+id/tv_edit_user_account"/>


           <!-- <TextView
                android:id="@+id/tv_edit_user_account"
                style="@style/LoginCreateTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="GoToEditUser"
                android:nextFocusDown="@+id/tv_view_task_management"
                android:text="@string/button_got_to_edit_user" />-->

           <!-- <TextView
                android:id="@+id/tv_view_task_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="GoToTaskManagement"
                android:text="@string/button_task_management" />-->

        </LinearLayout>

    </LinearLayout>
</ScrollView>