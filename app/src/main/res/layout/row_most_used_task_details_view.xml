<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_most_used_task_detail_name"
            android:hint="Name"
            android:padding="8dp"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_most_used_task_title"
            android:hint="Job Title- e-Cure Android Application"
            android:padding="8dp"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_most_used_task_detail_create_time"
            android:hint="12.30 AM"
            android:padding="8dp"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_most_used_task_comment"
            android:hint="Comment-Create Home Activity"
            android:padding="8dp"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_most_used_task_attachment"
            android:hint="Attachment-"
            android:clickable="true"
            android:padding="8dp"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@android:color/black"/>




    </LinearLayout>







</LinearLayout>
