<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar"
            android:id="@+id/seperiorImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Set Supervisor"
                android:textStyle="bold"
                android:id="@+id/textViewSetSuperior"
                android:textSize="@dimen/list_item_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Prof. Aminul Islam"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text_size"
                android:id="@+id/textViewSuperiorName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="712929922"
                android:id="@+id/textViewSuperiorID"
                android:textSize="@dimen/list_item_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Emeritus Professor"
                android:id="@+id/textViewDesignation"
                android:textSize="@dimen/list_item_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Department of Natural"
                android:id="@+id/textViewDepartment"
                android:textSize="@dimen/list_item_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Set Subordinate"
                android:textStyle="bold"
                android:id="@+id/textViewSubordinate"
                android:textSize="@dimen/list_item_text_size" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>