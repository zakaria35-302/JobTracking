<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_shopping_lists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SetDesignation">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Designation"
            android:padding="0dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/edit_text_padding"
            android:paddingTop="@dimen/edit_text_padding"
            android:paddingBottom="@dimen/edit_text_padding">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/hint_enter_employee_designation"
                android:inputType="text"
                android:id="@+id/editTextSearchTask"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/navigationBarColor"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login_buttons_text_size"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listEmployeeDesignation">

            </ListView>

        </LinearLayout>


    </LinearLayout>

    <!-- <ListView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/listEmployeeTask"
         android:background="@color/dark_grey"
         android:layout_marginTop="60dp"/>-->

    <!--<ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listEmployeeDesignation"
        android:layout_marginTop="50dp"/>-->


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSetDesignation"
        style="@style/FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:theme="@style/Theme.AppCompat"
        android:onClick="addEmployeeDegignation"
        android:src="@drawable/icon_add"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:layout_margin="@dimen/activity_bottom_margin"
        app:pressedTranslationZ="12dp" />

    <!--</ScrollView>-->
</RelativeLayout>

